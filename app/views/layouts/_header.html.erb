<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">

		<div class="row">
			<div class="col-lg-5">
				<%= link_to "Instahire", root_path, id: "logo" %>
				<div class="input-group">
					<%= search_form_for @search, url: url_for(controller: 'catalogues', action: 'search'), html: { method: :post }  do |search| %>
					<%= search.input :title_or_description_cont, label: false %>
					<span class="input-group-btn">
						<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
						<span class="glyphicon glyphicon-search">
						</span>
						<% end %>
					</div><!-- /input-group -->
					<% end %>
				</div><!-- /.col-lg-6 -->
				<nav>
					<ul class="nav navbar-nav pull-right">

						<% if logged_in? %>
						<li><%= link_to "Catalogue", search_catalogues_path %></li>

						<% if current_user.client? %> <%# if worker, this link will be hidden%>
						<li><%= link_to "Post a task", new_task_path %></li>
						<% end %>

						<li><%= link_to "Users", users_path %></li>
						<li><%= link_to "Profile", current_user %></li>
						<li><%= link_to "Log out", logout_path, method: "delete" %></li>
						<% else %>
						<li><%= link_to "Sign up", signup_path %></li>
						<li><%= link_to "Log in", login_path %></li>
						<% end %>

					</ul>
				</nav>
			</div><!-- /.row -->
		</div>
	</header>