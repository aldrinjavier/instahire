<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default main-panel">
			
			<div class="panel-heading widen-main-panel-heading">
				<h3 class="alignleft">Education qualification</h3>
			</div> 

			<%= simple_form_for @user, url: {action: "update"}, html: {class: 'form-horizontal'}, wrapper: :horizontal_input_group do |f| %>
			<%= f.simple_fields_for :educations do |b| %>
			<%= render 'education_form', f: b %>
			<% end %>
			<%= link_to_add_fields "Add Education", f, :educations %>
			<div class="row">
				<div class="col-md-3 col-md-offset-9">
					<%= f.button :submit, "Continue", class: "btn btn-primary btn-md submit-button" %>
				</div>
			</div>

			<% end %>
		</div> 
	</div> 
</div> 