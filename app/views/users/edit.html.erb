<% provide(:title, "Edit user") %>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default main-panel">

			<div class="panel-heading widen-main-panel-heading">
				<h2 class="alignleft">
					<i class="glyphicon glyphicon-pencil"></i> &nbsp;
					<strong>EDIT PROFILE</strong>
				</h2>
			</div> 

			<%= simple_form_for @user, html: {class: 'form-horizontal'}, wrapper: :horizontal_input_group do |f| %>

			<div class="widen-error">
				<%= render 'shared/error_messages', object: f.object %>
			</div>
			<fieldset>
				<div class="panel panel-default sub-panel">
					<div class="inner-div-panel">

						<!-- UPLOAD SECTION -->
						<%= render 'upload_section', user: @user, f: f %>

						<!-- FIRST NAME -->
						<div class="required-field-block">
							<%= f.input :first_name, :required => false %>
							<div class="required-icon">
								<div class="text">*</div>
							</div>
						</div>

						<!-- LAST NAME -->
						<div class="required-field-block">
							<%= f.input :last_name, :required => false %>
							<div class="required-icon">
								<div class="text">*</div>
							</div>
						</div>

						<!-- EMAIL -->
						<div class="required-field-block">
							<%= f.input :email, :required => false %>
							<div class="required-icon">
								<div class="text">*</div>
							</div>
						</div>

						<!-- CHANGE PASSWORD -->
						<%= f.input :password, label: "Change password" %>

						<!-- CONFIRM PASSWORD -->
						<%= f.input :password_confirmation, label: "Confirm password" %>
							
						<!-- PERSONAL BIO -->
						<%= f.input :personal_bio, as: :text, input_html: {rows: 6}, placeholder: "Enter a summary of yourself. (Sell yourself here.)", hint: "maximum text is 50" %>

						<!-- COUNTY -->
						<div class="required-field-block">
							<div class="required-icon">
								<div class="text">*</div>
							</div>
						</div>
						<%= f.input :county_id, collection: County.order(:name), label_method: :name, value_method: :id, label: "County", include_blank: "Select county where you are located" %>
						
						<!-- AREA -->
						<div class="required-field-block" id="required-area">
							<div class="required-icon">
								<div class="text">*</div>
							</div>
						</div>
						<%= f.input :area_id, collection: County.order(:name), as: :grouped_select, group_method: :areas %>

					</div>
				</div>
			</fieldset>

			<!-- submit button -->
			<div class="row">
				<div class="col-md-3 col-md-offset-9">
					<%= f.button :submit, "Update Profile", class: "btn btn-success btn-md submit-button" %>
				</div>
			</div>
			<!--// submit button -->

			<% end %>
		</div>
	</div>
</div>