
<!-- diplay picture -->
<div class="col-sm-3">
	<% if task.client.picture? %>
	<%= image_tag @task.client.picture_url, :size => "180x180", class: "img-thumbnail", :id => "prof_pic"  %>
	<% else %>
	<%= image_tag 'default.jpg', :size => "180x180", class: "img-thumbnail"  %>	
	<% end %>
</div>

<div class="col-sm-9">
	<div class="row">
		<div class="col-sm-12">
			<h1> <%= task.title %> </h1> 	
			<%= "updated #{customised_time_ago_in_words(task.updated_at)} ago |" if  task.updated_at != task.created_at %> <%= "created #{customised_time_ago_in_words(task.created_at)} ago" %>

			<% if current_user?(task.client) %>
			<%= link_to edit_task_path(task.id), class: "pull-right" do %>
			<i class="glyphicon glyphicon-pencil"></i>&nbsp Edit Task
			<% end %>
			<% end %>


		</div>		
	</div><hr>

	<div class="row">
		<div class="col-sm-3">
			Client
		</div>
		<div class="col-sm-9">
			<%= task.client.fullname%>
		</div>		

	</div><br>

	<div class="row">
		<div class="col-sm-3">
			Location:
		</div>
		<div class="col-sm-9">
			<%= task.area.name%> <%= task.area.county.name%>
		</div>		

	</div><br>

	<div class="row">
		<div class="col-sm-3">
			Category:
		</div>
		<div class="col-sm-9">
			<%= task.subcategory.category.name%>
		</div>		

	</div><br>

	<div class="row">
		<div class="col-sm-3">
			Subcategory:
		</div>
		<div class="col-sm-9">
			<%= task.subcategory.name%>
		</div>		
	</div>

</div>	<!--// col 9 -->