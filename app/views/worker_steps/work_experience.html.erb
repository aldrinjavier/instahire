<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default main-panel">
			<div class="panel-heading widen-main-panel-heading">
				
				<h3 class="alignleft">Work experience</h3>

				<div style="text-align: right">
					<div style="display:inline-block"><h4>Step 3 of 4</h4></div>
					<div style="display:inline-block">
						<div class="progress education-progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
								
							</div>
						</div>
					</div>
				</div>
			</div> 


			<%= simple_form_for @user, url:wizard_path, html: {class: 'form-horizontal'}, wrapper: :horizontal_input_group do |f| %>
			<%= f.simple_fields_for :works do |b| %>
			<%= render 'work_form', f: b %>
			<% end %>
			<%= link_to_add_fields "Add work", f, :works %>

			<div class="row">
				<div class="col-md-3 col-md-offset-9">
					<%= f.button :submit, "Continue", class: "btn btn-primary btn-md submit-button" %>
				</div>
				<div class="col-md-3 col-md-offset-9">
					<div class="skip_step">
						<%= link_to " Skip this step Â»", next_wizard_path%>
					</div>
				</div>
			</div>


			<% end %>
		</div>
	</div>
</div>
