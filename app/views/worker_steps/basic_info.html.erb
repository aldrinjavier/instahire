<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default main-panel">
			<div class="panel-heading widen-main-panel-heading">
				
				<h3 class="alignleft">Basic information</h3>

				<div style="text-align: right">
					<div style="display:inline-block"><h2>Step 1 of 4</h2></div>
					<div style="display:inline-block">
						<div class="progress education-progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
								
							</div>
						</div>
					</div>
				</div>
			</div> 


			<%= simple_form_for @user, url:wizard_path, html: {class: 'form-horizontal'}, wrapper: :horizontal_input_group do |f| %>

			<fieldset>
				<div class="panel panel-default sub-panel">
					<div class="inner-div-panel">
						<%= f.input :personal_bio, as: :text %>
						<%= f.input :county_id, collection: County.order(:name), label_method: :name, value_method: :id, label: "County", include_blank: "Select a category of task" %>
						<%= f.input :area_id, collection: County.order(:name), as: :grouped_select, group_method: :areas %>
					</div>
				</div>
			</fieldset>

			<div class="row">

				<div class="col-md-3 col-md-offset-9">
					<%= f.button :submit, "Continue", class: "btn btn-primary btn-md submit-button" %>
				</div>
				
			</div>


			<% end %>
		</div>
	</div>
</div>



