//clear subcomment form comment text
$('#subcomment_comment_text'+ $.cookie("subcomment_form_id")).val('');

//retrieve subcomment form id that was stored on a cookie when submit was clicked
//then use it to append the newly added subcomment to the correct subcomment form
$('#response_subcomments'+ $.cookie("subcomment_form_id")).append('<%= j render(@subcomment) %>');

//update the count displayed in hide-link
$("#hide_subcomment_formx"+$.cookie("subcomment_form_id")).text("hide <%= @subcomment.response.subcomments.all.count %> replies");
//show hide_subcoment_form link if count is greater than 1
<%# if @subcomment.response.subcomments.all.count > 0 %>
$("#hide_subcomment_formx"+$.cookie("subcomment_form_id")).show();
<%# end %>


// alert($("#new_subcomment"+ $.cookie("subcomment_form_id")).attr('id'));
$('#new_subcomment'+ $.cookie("subcomment_form_id")).text("<%= @subcomment.response.subcomments.all.count %> replies");

$(".subcomment_link").each(function(){
	if($(this).text().charAt(0) != 0){
		$(this).show();
	}
});